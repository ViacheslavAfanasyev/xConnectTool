<Window x:Class="xConnectTool.Windows.GeneralSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xConnectTool.Windows"
        mc:Ignorable="d"
        Title="General settings" Height="168" Width="300" ResizeMode="NoResize">
    <Grid Height="135" VerticalAlignment="Top">
        <TextBox x:Name="xConnectSiteInput" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" ToolTip="https://xConnect/" TextChanged="xConnectSiteInput_TextChanged" />
        <Button x:Name="xConnectApply" Content="Apply" HorizontalAlignment="Left" Margin="217,36,0,0" VerticalAlignment="Top" Width="65" Height="23" Click="xConnectApply_Click"/>
        <Label x:Name="GeneralSettingsLabel" Content="xConnect site" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="InfoLabel" Content="Info_Label" HorizontalAlignment="Left" Margin="8,64,0,0" VerticalAlignment="Top" Foreground="#FFFB0909" IsEnabled="False" Width="274"/>
    </Grid>
</Window>
